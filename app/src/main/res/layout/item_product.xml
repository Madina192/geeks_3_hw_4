<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewIcon"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="Fashion Italian Bag"
        />

    <TextView
        android:id="@+id/textViewDescr"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintStart_toEndOf="@+id/imageViewIcon"
        android:textSize="22sp"
        android:textStyle="italic"
        android:text="Waterproof. Made in Germany"
        />
    
    <TextView
        android:id="@+id/textViewColor"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintBottom_toTopOf="@+id/textViewSum"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="22sp"
        android:text="Red"
        />
    
    <TextView
        android:id="@+id/textViewSum"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:background="@color/pink"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="21.5 USD"
        />



</androidx.constraintlayout.widget.ConstraintLayout>